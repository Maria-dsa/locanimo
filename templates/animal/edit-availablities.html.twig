{% extends 'base.html.twig' %}

{% block title %}Editer les disponibilités{% endblock %}

{% block body %}



    <h1><i class="bi bi-gear me-2"></i><span>Editer les disponibilités</span></h1>

    {{ form_start(form) }}
    {% for availablity in form.availablities %}

        <div class="container text-center col-6 pt-5 bg-info mt-2 rounded-4">
           <div class="d-flex justify-content-center p-3">
                <div class="col-3 me-3 text-dark">
                    {{ form_row(availablity.startedAt, {

                    }) }}
                </div>
                <div class="col-3 text-dark">
                    {{ form_row(availablity.endedAt, {
                    }) }}
                </div>
               <div class="col-3 text-dark">
                   {{ form_row(availablity.dailyPrice, {
                   }) }}
               </div>
            </div>

            <form method="post" action="{{ path('app_availablity_delete', {'id': availablity.vars.value.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ availablity.vars.value.id) }}">
                <button class="btn">Delete</button>
            </form>
        </div>
    {% endfor %}
    <div class="text-center">
        <button class="btn btn-primary mt-3 col-3"><i class="bi bi-check-lg me-2"></i><span>{{ button_label|default('Enregistrer') }}</span></button>
    </div>
    {{ form_end(form) }}

    <button><a href="{{ path('app_animal_availablities_add', {'id':animal.id })}}">Ajouter une disponibilité</a></button>

    <a href=" {{ path('app_animal_show', {id: animal.id }) }} ">
        <i class="bi bi-arrow-return-left me-2"></i><span>Retour à la fiche animal</span>
    </a>


{% endblock %}