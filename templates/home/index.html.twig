{% extends 'base.html.twig' %}

{% block title %}Locanimo{% endblock %}

{% block body %}
<div class="container">
    {% if app.user %}
        <h1 class ="text-center">Bonjour {{ app.user.firstname }}</h1>
    {% endif %}

    <div class="row custom-line align-items-end">
        <div class="col bg-primary m-1 rounded-4">
            {# {{ form_start(categoryform) }} #}
            <div class="row justify-content-center custom-line">
                <div class="row justify-content-center custom-line m-3">
                    <h4 class="text-center text-secondary text">Filtrer par espèce animale</h4>
                    <div class="col col-sm-10 col-md-5 col-lg-4 mt-1 mb-1">
                        {# {{ form_row(categoryform.search) }} #}
                    </div>
                    <div class="col col-sm-10 col-md-5 col-lg-4 mt-1 mb-1 align-items-end">
                        <button class="btn btn-secondary text-white"><i class="bi bi-search me-2"></i><span>Rechercher</span>
                        </button>
                    </div>
                </div>
            </div>
                        {# {{ form_end(categoryform) }}#}
        </div>
        <div class="col bg-primary m-1 rounded-4">
            {# {{ form_start(zipForm) }}#}
            <div class="row justify-content-center custom-line">
                <div class="row justify-content-center custom-line m-3">
                    <h4 class="text-center text-secondary text">Filtrer par département</h4>
                    <div class="col col-sm-10 col-md-5 col-lg-4 mt-1 mb-1">
                        {# {{ form_row(zipForm.search) }}#}
                    </div>
                    <div class="col col-sm-10 col-md-5 col-lg-4 mt-1 mb-1 align-items-end">
                        <button class="btn btn-secondary text-white"><i class="bi bi-search me-2"></i><span>Rechercher</span>
                        </button>
                    </div>
                </div>
            </div>
            {# {{ form_end(zipForm) }}#}
        </div>
    </div>

    <div class="row custom-line">
        <h3> En ce moment chez Locanimo</h3>
        {% for animal in animals %}
            <div class="col-sm-10 col-md-6 col-lg-4 mt-4 mb-4 ">
                <div class="card h-100 px-3">
                            <div class="card-header bg-transparent border-dark text-secondary">
                                <h2 class="card-title"><i class="bi bi-chat-heart-fill text-secondary me-2"></i>{{ animal.name }}</h2>
                            </div>
                    <div class="card-body text-primary">
                        <img class= "img-fluid h-100" src="{{ vich_uploader_asset(animal) }}">
                    </div>
                    <div class="card-footer bg-transparent border-dark">

                        {{ animal.owner.zipCode }} {{ animal.owner.city }}
                        <br><a href="{{ path('app_animal_show', {id: animal.id }) }}"
                               class="stretched-link"></a>
                    </div>
                </div>
            </div>
        {% else %}
            <h3>Aucune annonce</h3>

        {% endfor %}
    </div>
</div>
{% endblock %}
